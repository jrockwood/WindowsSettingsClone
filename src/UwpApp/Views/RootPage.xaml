<Page x:Class="WindowsSettingsClone.UwpApp.Views.RootPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:views="using:WindowsSettingsClone.UwpApp.Views"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
      Loaded="OnLoaded"
      mc:Ignorable="d">

  <Grid>
    <views:TitleBar x:Name="AppTitleBar" ViewModel="{x:Bind TitleBarViewModel}" />
    <Frame x:Name="RootFrame" NavigationFailed="OnNavigationFailed" />
  </Grid>
</Page>
